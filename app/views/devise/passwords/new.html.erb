<div class="signup-form">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name),
               html: {method: :post, class: 'form-horizontal'}) do |f| %>
    <div class="col-xs-8 col-xs-offset-4">
      <h2>Forgot your password?</h2>
    </div>

    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <label class="control-label col-xs-4">Email Address</label>
      <div class="col-xs-8">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-xs-8 col-xs-offset-4">
        <button type="submit" class="btn btn-primary btn-lg">Send me reset password instructions</button>
      </div>
    </div>
  <% end %>

  <div class="text-center">
    <%= link_to "Login", new_session_path(resource_name) %><br/>
  </div>

  <div class="text-center">
    <%= link_to "Sign up", new_registration_path(resource_name) %>
  </div>
</div>
